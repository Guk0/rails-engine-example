<div class="container">
  <% @comments.each do |comment| %>
    <div class="card">
      <div class="card-body">
        <div>title: <%= comment.title %></div>
        <div>post: <%= comment.post.title %></div>
        <div>user: <%= comment.user.email %></div>
      </div>
    </div>
  <% end %>
</div>